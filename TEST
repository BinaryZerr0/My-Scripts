-- BinaryZero's Hub Script
-- Modern Roblox Hub with Loading Screen and Auto Script Management
-- Usage: loadstring(game:HttpGet("your_raw_url_here"))()

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Hub Configuration
local HubConfig = {
    HubName = "BinaryZero's Hub",
    Version = "v2.0 Ultra",
    LoadingTime = 2, -- seconds
    
    -- Modern Glass UI Colors
    Colors = {
        Primary = Color3.fromRGB(18, 18, 24),
        Secondary = Color3.fromRGB(28, 28, 36),
        Surface = Color3.fromRGB(35, 35, 45),
        Accent = Color3.fromRGB(88, 101, 242),
        AccentLight = Color3.fromRGB(139, 148, 255),
        AccentGlow = Color3.fromRGB(120, 130, 255),
        Text = Color3.fromRGB(240, 240, 245),
        TextSecondary = Color3.fromRGB(160, 160, 170),
        TextDim = Color3.fromRGB(100, 100, 110),
        Success = Color3.fromRGB(16, 185, 129),
        SuccessGlow = Color3.fromRGB(52, 211, 153),
        Warning = Color3.fromRGB(251, 191, 36),
        Error = Color3.fromRGB(239, 68, 68),
        Glass = Color3.fromRGB(255, 255, 255)
    }
}

-- Script Database - Add your scripts here
local ScriptDatabase = {
    {
        name = "Infinite Yield",
        description = "Advanced admin commands script",
        loadstring = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))())'
    },
    {
        name = "Dark Dex",
        description = "Advanced explorer for Roblox",
        loadstring = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Babyhamsta/RBLX_Scripts/main/Universal/BypassedDarkDexV3.lua", true))()'
    },
    {
        name = "Simple Spy",
        description = "Remote spy for debugging",
        loadstring = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/exxtremestuffs/SimpleSpySource/master/SimpleSpy.lua"))()'
    },
    {
        name = "Unnamed ESP",
        description = "Universal ESP script",
        loadstring = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/ic3w0lf22/Unnamed-ESP/master/UnnamedESP.lua"))()'
    },
    {
        name = "Universal Fly",
        description = "Fly script with F key toggle",
        loadstring = [[
            local Players = game:GetService("Players")
            local UserInputService = game:GetService("UserInputService")
            local player = Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local humanoid = character:WaitForChild("Humanoid")
            local rootPart = character:WaitForChild("HumanoidRootPart")
            
            local flying = false
            local speed = 50
            local bodyVelocity
            
            local function startFlying()
                flying = true
                bodyVelocity = Instance.new("BodyVelocity")
                bodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
                bodyVelocity.Velocity = Vector3.new(0, 0, 0)
                bodyVelocity.Parent = rootPart
                humanoid.PlatformStand = true
            end
            
            local function stopFlying()
                flying = false
                if bodyVelocity then bodyVelocity:Destroy() end
                humanoid.PlatformStand = false
            end
            
            UserInputService.InputBegan:Connect(function(input)
                if input.KeyCode == Enum.KeyCode.F then
                    if flying then stopFlying() else startFlying() end
                end
            end)
            
            game:GetService("RunService").Heartbeat:Connect(function()
                if flying and bodyVelocity then
                    local camera = workspace.CurrentCamera
                    local direction = Vector3.new(0, 0, 0)
                    if UserInputService:IsKeyDown(Enum.KeyCode.W) then direction = direction + camera.CFrame.LookVector end
                    if UserInputService:IsKeyDown(Enum.KeyCode.S) then direction = direction - camera.CFrame.LookVector end
                    if UserInputService:IsKeyDown(Enum.KeyCode.A) then direction = direction - camera.CFrame.RightVector end
                    if UserInputService:IsKeyDown(Enum.KeyCode.D) then direction = direction + camera.CFrame.RightVector end
                    if UserInputService:IsKeyDown(Enum.KeyCode.Space) then direction = direction + Vector3.new(0, 1, 0) end
                    if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then direction = direction - Vector3.new(0, 1, 0) end
                    bodyVelocity.Velocity = direction * speed
                end
            end)
            print("Fly script loaded! Press F to toggle flying.")
        ]]
    },
    {
        name = "Speed Hack",
        description = "Walkspeed and jumppower modifier",
        loadstring = [[
            local Players = game:GetService("Players")
            local player = Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local humanoid = character:WaitForChild("Humanoid")
            humanoid.WalkSpeed = 100
            humanoid.JumpPower = 100
            print("Speed hack activated! WalkSpeed: 100, JumpPower: 100")
        ]]
    },
    {
        name = "Noclip Toggle",
        description = "Toggle noclip with N key",
        loadstring = [[
            local Players = game:GetService("Players")
            local UserInputService = game:GetService("UserInputService")
            local RunService = game:GetService("RunService")
            local player = Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local noclipping = false
            local connection
            
            local function noclip()
                for _, part in pairs(character:GetDescendants()) do
                    if part:IsA("BasePart") and part.CanCollide then
                        part.CanCollide = false
                    end
                end
            end
            
            local function toggleNoclip()
                noclipping = not noclipping
                if noclipping then
                    connection = RunService.Stepped:Connect(noclip)
                    print("Noclip enabled")
                else
                    if connection then connection:Disconnect() end
                    for _, part in pairs(character:GetDescendants()) do
                        if part:IsA("BasePart") then part.CanCollide = true end
                    end
                    print("Noclip disabled")
                end
            end
            
            UserInputService.InputBegan:Connect(function(input)
                if input.KeyCode == Enum.KeyCode.N then toggleNoclip() end
            end)
            print("Noclip script loaded! Press N to toggle.")
        ]]
    }
}

-- Utility Functions
local function createTweenInfo(time, style, direction, repeatCount, reverses, delayTime)
    return TweenInfo.new(
        time or 0.25,
        style or Enum.EasingStyle.Exponential,
        direction or Enum.EasingDirection.Out,
        repeatCount or 0,
        reverses or false,
        delayTime or 0
    )
end

local function createTween(object, properties, duration, style)
    return TweenService:Create(
        object,
        createTweenInfo(duration, style),
        properties
    )
end

local function createCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 12)
    corner.Parent = parent
    return corner
end

local function createStroke(parent, color, thickness, transparency)
    local stroke = Instance.new("UIStroke")
    stroke.Color = color or HubConfig.Colors.Surface
    stroke.Thickness = thickness or 1
    stroke.Transparency = transparency or 0.5
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    stroke.Parent = parent
    return stroke
end

local function createPadding(parent, padding)
    local uiPadding = Instance.new("UIPadding")
    uiPadding.PaddingLeft = UDim.new(0, padding or 10)
    uiPadding.PaddingRight = UDim.new(0, padding or 10)
    uiPadding.PaddingTop = UDim.new(0, padding or 10)
    uiPadding.PaddingBottom = UDim.new(0, padding or 10)
    uiPadding.Parent = parent
    return uiPadding
end

local function createGradient(parent, color1, color2, rotation)
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, color1),
        ColorSequenceKeypoint.new(1, color2)
    }
    gradient.Rotation = rotation or 0
    gradient.Parent = parent
    return gradient
end

-- Main Hub Class
local BinaryZeroHub = {}
BinaryZeroHub.__index = BinaryZeroHub

function BinaryZeroHub.new()
    local self = setmetatable({}, BinaryZeroHub)
    
    self.gui = nil
    self.loadingFrame = nil
    self.mainFrame = nil
    self.scriptFrames = {}
    self.filteredScripts = ScriptDatabase
    self.isVisible = true
    self.minSize = Vector2.new(650, 450)
    self.maxSize = Vector2.new(1400, 900)
    self.currentSize = Vector2.new(900, 650)
    self.isDragging = false
    self.isResizing = false
    
    self:init()
    self:setupToggleKey()
    return self
end

function BinaryZeroHub:init()
    -- Remove existing hub if it exists
    if playerGui:FindFirstChild("BinaryZeroHub") then
        playerGui:FindFirstChild("BinaryZeroHub"):Destroy()
    end
    
    self:createMainGui()
    self:createLoadingScreen()
    self:startLoading()
end

function BinaryZeroHub:createMainGui()
    -- Main ScreenGui
    self.gui = Instance.new("ScreenGui")
    self.gui.Name = "BinaryZeroHub"
    self.gui.ResetOnSpawn = false
    self.gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    self.gui.Parent = playerGui
end

function BinaryZeroHub:createLoadingScreen()
    -- Modern compact loading screen
    self.loadingFrame = Instance.new("Frame")
    self.loadingFrame.Name = "LoadingFrame"
    self.loadingFrame.Size = UDim2.new(0, 320, 0, 140)
    self.loadingFrame.Position = UDim2.new(0.5, -160, 0.5, -70)
    self.loadingFrame.BackgroundColor3 = HubConfig.Colors.Primary
    self.loadingFrame.BackgroundTransparency = 0.1
    self.loadingFrame.BorderSizePixel = 0
    self.loadingFrame.Parent = self.gui
    createCorner(self.loadingFrame, 16)
    createStroke(self.loadingFrame, HubConfig.Colors.Accent, 2, 0.3)
    
    -- Loading Background Gradient
    createGradient(self.loadingFrame, HubConfig.Colors.Primary, HubConfig.Colors.Secondary, 45)
    
    -- Loading Container
    local loadingContainer = Instance.new("Frame")
    loadingContainer.Name = "LoadingContainer"
    loadingContainer.Size = UDim2.new(1, -40, 1, -40)
    loadingContainer.Position = UDim2.new(0, 20, 0, 20)
    loadingContainer.BackgroundTransparency = 1
    loadingContainer.Parent = self.loadingFrame
    
    -- Hub Title
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "TitleLabel"
    titleLabel.Size = UDim2.new(1, 0, 0, 40)
    titleLabel.Position = UDim2.new(0, 0, 0, 0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = "Loading " .. HubConfig.HubName
    titleLabel.TextColor3 = HubConfig.Colors.Text
    titleLabel.TextScaled = true
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.Parent = loadingContainer
    
    -- Loading Bar Background
    local loadingBarBg = Instance.new("Frame")
    loadingBarBg.Name = "LoadingBarBackground"
    loadingBarBg.Size = UDim2.new(1, 0, 0, 6)
    loadingBarBg.Position = UDim2.new(0, 0, 0, 60)
    loadingBarBg.BackgroundColor3 = HubConfig.Colors.Secondary
    loadingBarBg.BorderSizePixel = 0
    loadingBarBg.Parent = loadingContainer
    createCorner(loadingBarBg, 3)
    
    -- Loading Bar
    local loadingBar = Instance.new("Frame")
    loadingBar.Name = "LoadingBar"
    loadingBar.Size = UDim2.new(0, 0, 1, 0)
    loadingBar.Position = UDim2.new(0, 0, 0, 0)
    loadingBar.BackgroundColor3 = HubConfig.Colors.Accent
    loadingBar.BorderSizePixel = 0
    loadingBar.Parent = loadingBarBg
    createCorner(loadingBar, 3)
    
    -- Loading Text
    local loadingText = Instance.new("TextLabel")
    loadingText.Name = "LoadingText"
    loadingText.Size = UDim2.new(1, 0, 0, 25)
    loadingText.Position = UDim2.new(0, 0, 0, 80)
    loadingText.BackgroundTransparency = 1
    loadingText.Text = "Initializing..."
    loadingText.TextColor3 = HubConfig.Colors.TextSecondary
    loadingText.TextScaled = true
    loadingText.Font = Enum.Font.Gotham
    loadingText.Parent = loadingContainer
    
    self.loadingBar = loadingBar
    self.loadingText = loadingText
end

function BinaryZeroHub:startLoading()
    local loadingSteps = {
        "Initializing...",
        "Loading scripts...",
        "Setting up interface...",
        "Finalizing..."
    }
    
    local stepDuration = HubConfig.LoadingTime / #loadingSteps
    
    for i, step in ipairs(loadingSteps) do
        wait(stepDuration)
        
        -- Update loading text
        self.loadingText.Text = step
        
        -- Update loading bar
        local targetSize = UDim2.new(i / #loadingSteps, 0, 1, 0)
        local tween = TweenService:Create(
            self.loadingBar,
            createTweenInfo(stepDuration * 0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {Size = targetSize}
        )
        tween:Play()
    end
    
    wait(0.5)
    self:transitionToMain()
end

function BinaryZeroHub:transitionToMain()
    -- Create main interface
    self:createMainInterface()
    
    -- Fade out loading screen
    local fadeOutTween = TweenService:Create(
        self.loadingFrame,
        createTweenInfo(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        {BackgroundTransparency = 1}
    )
    
    fadeOutTween:Play()
    fadeOutTween.Completed:Connect(function()
        self.loadingFrame:Destroy()
    end)
    
    -- Fade in main frame
    self.mainFrame.BackgroundTransparency = 1
    local fadeInTween = TweenService:Create(
        self.mainFrame,
        createTweenInfo(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        {BackgroundTransparency = 0}
    )
    fadeInTween:Play()
end

function BinaryZeroHub:createMainInterface()
    -- Main Frame with modern glass effect
    self.mainFrame = Instance.new("Frame")
    self.mainFrame.Name = "MainFrame"
    self.mainFrame.Size = UDim2.new(0, self.currentSize.X, 0, self.currentSize.Y)
    self.mainFrame.Position = UDim2.new(0.5, -self.currentSize.X/2, 0.5, -self.currentSize.Y/2)
    self.mainFrame.BackgroundColor3 = HubConfig.Colors.Primary
    self.mainFrame.BackgroundTransparency = 0.05
    self.mainFrame.BorderSizePixel = 0
    self.mainFrame.ClipsDescendants = true
    self.mainFrame.Parent = self.gui
    createCorner(self.mainFrame, 16)
    
    -- Glass border effect
    local glassBorder = createStroke(self.mainFrame, HubConfig.Colors.Glass, 1, 0.8)
    
    -- Blur background effect (simulated)
    local blurFrame = Instance.new("Frame")
    blurFrame.Name = "BlurEffect"
    blurFrame.Size = UDim2.new(1, 0, 1, 0)
    blurFrame.Position = UDim2.new(0, 0, 0, 0)
    blurFrame.BackgroundColor3 = HubConfig.Colors.Primary
    blurFrame.BackgroundTransparency = 0.3
    blurFrame.BorderSizePixel = 0
    blurFrame.ZIndex = 1
    blurFrame.Parent = self.mainFrame
    createCorner(blurFrame, 16)
    
    -- Header
    self:createHeader()
    
    -- Search Bar
    self:createSearchBar()
    
    -- Scripts Container
    self:createScriptsContainer()
    
    -- Populate scripts
    self:populateScripts()
    
    -- Make draggable and resizable
    self:makeDraggable()
    self:makeResizable()
end

